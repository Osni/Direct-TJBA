@model Direct_TJBA.Models.Referencia

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Referencia</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TipoReferencia.Id)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.TipoReferencia.Id)
            @Html.DropDownListFor(model => model.TipoReferencia.Id, new SelectList(ViewBag.TipoReferencia, "Id", "Descricao", Model.TipoReferencia.Id))
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
